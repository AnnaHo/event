<%= render "layouts/header"%>

<div class="jumbotron">
<div class="container">
  <%= render "layouts/message" %>
  <div class="row">
    <%= form_tag(group_event_path(@group_event), method: 'put') do %>
      <div class="form-group">
        <%= label_tag "name" %>
        <%= text_field_tag "[group_event][name]",@group_event.name, placeholder: "name", class: "form-control" %>
      </div>
      <div class="form-group">
        <%= label_tag "description" %>
        <%= text_area_tag "[group_event][description]",@group_event.description, placeholder: "description", class: "form-control" %>
      </div>
      <div class="form-group">
        <%= label_tag "location" %>
        <%= text_field_tag "[group_event][location]",@group_event.location, placeholder: "location", class: "form-control" %>
      </div>
      
      <div class="form-group">
        <%= label_tag "start_date"%>
          <div class='input-group date' data-provide="datepicker">
              <%= text_field_tag "[group_event][start_date]",@group_event.start_date, class: "form-control"%>
                <span class="input-group-addon">
                  <span class="glyphicon glyphicon-calendar"></span>
                </span>
          </div>
      </div>
      <div class="form-group">
         <%= label_tag "end_date" %>
        <div class='input-group date' data-provide="datepicker">
            <%= text_field_tag "[group_event][end_date]",@group_event.end_date, class: "form-control"%>
              <span class="input-group-addon">
                <span class="glyphicon glyphicon-calendar"></span>
              </span>
        </div>
      </div>
      <div class="form-group">
         <%= label_tag "duration_date" %>
         <%= text_field_tag "[group_event][duration]",duration(@group_event), class: "form-control", placeholder: "please fill in days"%>
      </div>
        <div class="form-group">
            <%= label_tag "status"%>
            <%= label_tag "draft", "draft",class: "radio-inline"%>
            <%= radio_button_tag "[group_event][status]", "draft", @group_event.draft? %>
            <%= label_tag "published", "published",class: "radio-inline"%>
            <%= radio_button_tag "[group_event][status]", "published", @group_event.published?%>
        </div>
        <div class="form-group">
          <%= submit_tag "Submit", class: "btn btn-default"%>
        </div>
    <% end %>
  </div>
</div>
</div>